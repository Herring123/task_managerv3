<div class="contents">

<h3>Name</h3>
<%= @task.name %>
<br>
<h4>Description</h4>
<%= @task.description %>


<div class="buttons">

<%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

<%= link_to "Edit Task", edit_task_path, class: "btn btn-info" %>
<%= link_to "Back to Tasks", tasks_path, class: "btn btn-primary" %>
</div>
</div>
